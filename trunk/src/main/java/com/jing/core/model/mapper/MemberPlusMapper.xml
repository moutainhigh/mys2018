	</trim>
</insert>

<!-- 根据标识，修改 会员充值活动 -->  
<update id="modifyMemberPlus" parameterType="com.jing.core.model.entity.MemberPlus" >
  	UPDATE tb_member_plus SET
	<trim suffixOverrides=",">
		<if test="plusName != null"> plus_name = #{plusName},</if>
		<if test="plusMoney != null"> plus_money = #{plusMoney},</if>
		<if test="giftMoney != null"> gift_money = #{giftMoney},</if>
		<if test="money != null"> money = #{money},</if>
		<if test="status != null"> status = #{status},</if>
		<if test="createdBy != null"> created_by = #{createdBy},</if>
		<if test="updatedBy != null"> updated_by = #{updatedBy},</if>
		updated_date = now(),
	</trim>
	WHERE plus_id = #{plusId}
</update>
 
<!-- 删除 会员充值活动 -->
<delete id="dropMemberPlusByPlusId" parameterType="java.lang.Integer">
	DELETE FROM tb_member_plus WHERE plus_id = #{plusId}
</delete> 

<!-- 根据标识查询 会员充值活动 -->
<select id="queryMemberPlusByPlusId"  resultMap="MemberPlusResultMap" parameterType="java.lang.Integer">
	SELECT 
	<include refid="sql_memberPlus_item"/>
	FROM tb_member_plus WHERE plus_id = #{plusId}
</select>

<!-- 根据属性查询会员充值活动 -->
<select id="queryMemberPlusByProperty"  resultMap="MemberPlusResultMap" parameterType="java.util.Map">
	SELECT 
	<include refid="sql_memberPlus_item"/>
	FROM tb_member_plus 
