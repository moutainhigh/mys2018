<sql id="sql_memberPlus_item">
	plus_id, plus_name, plus_money, gift_money, money, status, created_by, created_date, updated_by, updated_date
</sql>
       
<!-- 查询条件 无WHERE -->
<sql id="sql_memberPlus_query_nowhere">
	<trim prefix=" " prefixOverrides="AND|OR">
		<if test="memberPlus.plusId != null">AND plus_id = #{memberPlus.plusId} </if>
		<if test="memberPlus.plusName != null">AND plus_name like concat(#{memberPlus.plusName}, '%') </if>
		<if test="memberPlus.status != null">AND status = #{memberPlus.status} </if>
		<if test="memberPlus.createdBy != null">AND created_by like concat(#{memberPlus.createdBy}, '%') </if>
		<if test="memberPlus.updatedBy != null">AND updated_by like concat(#{memberPlus.updatedBy}, '%') </if>
	</trim>
</sql>
   
<!-- 插入 会员充值活动 -->
<insert id="addMemberPlus" parameterType="com.jing.core.model.entity.MemberPlus" >
	<selectKey keyProperty="plusId" order="AFTER" resultType="java.lang.Integer">
		SELECT LAST_INSERT_ID()
	</selectKey>
 	INSERT INTO tb_member_plus 
	<trim prefix=" (" suffix=")" suffixOverrides=",">
		<if test="plusId != null"> plus_id,</if>
		<if test="plusName != null"> plus_name,</if>
		<if test="plusMoney != null"> plus_money,</if>
		<if test="giftMoney != null"> gift_money,</if>
		<if test="money != null"> money,</if>
		<if test="status != null"> status,</if>
		<if test="createdBy != null"> created_by,</if>
		created_date,
		<if test="updatedBy != null"> updated_by,</if>
		updated_date,
	</trim>	 	
	<trim prefix="values (" suffix=")" suffixOverrides=",">
		<if test="plusId != null"> #{plusId},</if>
		<if test="plusName != null"> #{plusName},</if>
		<if test="plusMoney != null"> #{plusMoney},</if>
		<if test="giftMoney != null"> #{giftMoney},</if>
		<if test="money != null"> #{money},</if>
		<if test="status != null"> #{status},</if>
		<if test="createdBy != null"> #{createdBy},</if>
