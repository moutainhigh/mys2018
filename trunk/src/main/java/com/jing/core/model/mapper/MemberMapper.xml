		<if test="param.memberPassword != null">AND member_password like concat(#{param.memberPassword}, '%') </if>
		<if test="param.integral != null">AND integral = #{param.integral} </if>
		<if test="param.mobile != null">AND mobile like concat(#{param.mobile}, '%') </if>
