	<id column="class_id" property="classId"/>
	<result column="class_name" property="className"/>
	<result column="status" property="status"/>
	<result column="clock_flag" property="clockFlag"/>
	<result column="flag" property="flag"/>
	<result column="types" property="types"/>
	<result column="is_priority" property="isPriority"/>
	<result column="priority_accumulate" property="priorityAccumulate"/>
	<result column="arrive_warn" property="arriveWarn"/>
	<result column="arrive_remind" property="arriveRemind"/>
