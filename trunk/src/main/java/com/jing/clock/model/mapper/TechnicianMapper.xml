	<id column="technician_id" property="technicianId"/>
	<result column="store_id" property="storeId"/>
	<result column="emp_id" property="empId"/>
	<result column="tech_no" property="techNo"/>
	<result column="tech_card" property="techCard"/>
	<result column="tech_name" property="techName"/>
	<result column="sex" property="sex"/>
	<result column="shift_id" property="shiftId"/>
	<result column="status" property="status"/>
	<result column="shift_status" property="shiftStatus"/>
	<result column="created_by" property="createdBy"/>
