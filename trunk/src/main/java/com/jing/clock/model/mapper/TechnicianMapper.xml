<!-- 根据标识，修改 技师 -->  
<update id="modifyTechnician" parameterType="com.jing.clock.model.entity.Technician" >
  	UPDATE tc_technician SET
	<trim suffixOverrides=",">
		<if test="storeId != null"> store_id = #{storeId},</if>
		<if test="empId != null"> emp_id = #{empId},</if>
		<if test="techNo != null"> tech_no = #{techNo},</if>
		<if test="techCard != null"> tech_card = #{techCard},</if>
		<if test="techName != null"> tech_name = #{techName},</if>
		<if test="sex != null"> sex = #{sex},</if>
		<if test="shiftId != null"> shift_id = #{shiftId},</if>
		<if test="status != null"> status = #{status},</if>
		<if test="shiftStatus != null"> shift_status = #{shiftStatus},</if>
		<if test="createdBy != null"> created_by = #{createdBy},</if>
		<if test="updatedBy != null"> updated_by = #{updatedBy},</if>
		updated_date = now(),
	</trim>
	WHERE technician_id = #{technicianId}
</update>
 
<!-- 删除 技师 -->
<delete id="dropTechnicianByTechnicianId" parameterType="java.lang.Integer">
	DELETE FROM tc_technician WHERE technician_id = #{technicianId}
</delete> 

<!-- 根据标识查询 技师 -->
<select id="queryTechnicianByTechnicianId"  resultMap="TechnicianResultMap" parameterType="java.lang.Integer">
	SELECT 
	<include refid="sql_technician_item"/>
	FROM tc_technician WHERE technician_id = #{technicianId}
</select>

<!-- 根据属性查询技师 -->
<select id="queryTechnicianByProperty"  resultMap="TechnicianResultMap" parameterType="java.util.Map">
	SELECT 
	<include refid="sql_technician_item"/>
	FROM tc_technician 
	<where>
		<include refid="sql_technician_query_nowhere"/>
	</where>
</select>

<!-- 根据技师属性与分页信息分页查询技师信息 -->
<select id="queryTechnicianForPage"  resultMap="TechnicianResultMap" > 
	SELECT 
	<include refid="sql_technician_item"/>
	FROM tc_technician 
	<where>
		<include refid="sql_technician_query_nowhere"/>
	</where>
</select>

</mapper>   
