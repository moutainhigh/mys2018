<sql id="sql_technician_item">
	technician_id, store_id, emp_id, tech_no, tech_card, tech_name, sex, shift_id, status, shift_status, created_by, created_date, updated_by, updated_date
</sql>
       
<!-- 查询条件 无WHERE -->
<sql id="sql_technician_query_nowhere">
	<trim prefix=" " prefixOverrides="AND|OR">
		<if test="technician.technicianId != null">AND technician_id = #{technician.technicianId} </if>
		<if test="technician.storeId != null">AND store_id like concat(#{technician.storeId}, '%') </if>
		<if test="technician.empId != null">AND emp_id like concat(#{technician.empId}, '%') </if>
		<if test="technician.techNo != null">AND tech_no like concat(#{technician.techNo}, '%') </if>
		<if test="technician.techCard != null">AND tech_card like concat(#{technician.techCard}, '%') </if>
		<if test="technician.techName != null">AND tech_name like concat(#{technician.techName}, '%') </if>
		<if test="technician.sex != null">AND sex = #{technician.sex} </if>
		<if test="technician.shiftId != null">AND shift_id = #{technician.shiftId} </if>
		<if test="technician.status != null">AND status = #{technician.status} </if>
		<if test="technician.shiftStatus != null">AND shift_status = #{technician.shiftStatus} </if>
		<if test="technician.createdBy != null">AND created_by like concat(#{technician.createdBy}, '%') </if>
		<if test="technician.updatedBy != null">AND updated_by like concat(#{technician.updatedBy}, '%') </if>
	</trim>
</sql>
   
<!-- 插入 技师 -->
<insert id="addTechnician" parameterType="com.jing.clock.model.entity.Technician" >
	<selectKey keyProperty="technicianId" order="AFTER" resultType="java.lang.Integer">
		SELECT LAST_INSERT_ID()
	</selectKey>
 	INSERT INTO tc_technician 
	<trim prefix=" (" suffix=")" suffixOverrides=",">
		<if test="technicianId != null"> technician_id,</if>
		<if test="storeId != null"> store_id,</if>
		<if test="empId != null"> emp_id,</if>
		<if test="techNo != null"> tech_no,</if>
		<if test="techCard != null"> tech_card,</if>
		<if test="techName != null"> tech_name,</if>
		<if test="sex != null"> sex,</if>
		<if test="shiftId != null"> shift_id,</if>
		<if test="status != null"> status,</if>
		<if test="shiftStatus != null"> shift_status,</if>
		<if test="createdBy != null"> created_by,</if>
		created_date,
		<if test="updatedBy != null"> updated_by,</if>
		updated_date,
	</trim>	 	
	<trim prefix="values (" suffix=")" suffixOverrides=",">
		<if test="technicianId != null"> #{technicianId},</if>
		<if test="storeId != null"> #{storeId},</if>
		<if test="empId != null"> #{empId},</if>
		<if test="techNo != null"> #{techNo},</if>
		<if test="techCard != null"> #{techCard},</if>
		<if test="techName != null"> #{techName},</if>
		<if test="sex != null"> #{sex},</if>
		<if test="shiftId != null"> #{shiftId},</if>
