<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jing.attendance.model.dao.EmployeeAttendanceMapper">

<!-- Result Map-->
<resultMap id="EmployeeAttendanceResultMap" type="com.jing.attendance.model.entity.EmployeeAttendance">
	<id column="link_id" property="linkId"/>
	<result column="emp_id" property="empId"/>
	<result column="attendance_id" property="attendanceId"/>
	<result column="created_by" property="createdBy"/>
	<result column="created_date" property="createdDate"/>
	<result column="updated_by" property="updatedBy"/>
	<result column="updated_date" property="updatedDate"/>
</resultMap>

<!-- 员工、考勤规则、关联关系联合 -->
<resultMap id="EmployeeAttendanceLinkResult" 
		type="com.jing.attendance.service.bo.EmployeeAttendanceBo"
		extends="com.jing.core.model.dao.EmployeeMapper.EmployeeResultMap">	
	<result column="link_id" property="linkId"/>
	<result column="attendance_name" property="attendanceName"/>
	<result column="attendance_id" property="attendanceId"/>
</resultMap>

<sql id="sql_employeeAttendance_item">
	link_id, emp_id, attendance_id, created_by, created_date, updated_by, updated_date
</sql>
       
<!-- 查询条件 无WHERE -->
<sql id="sql_employeeAttendance_query_nowhere">
	<trim prefix=" " prefixOverrides="AND|OR">
		<if test="employeeAttendance.linkId != null">AND link_id = #{employeeAttendance.linkId} </if>
		<if test="employeeAttendance.empId != null">AND emp_id like concat(#{employeeAttendance.empId}, '%') </if>
		<if test="employeeAttendance.attendanceId != null">AND attendance_id = #{employeeAttendance.attendanceId} </if>
		<if test="employeeAttendance.createdBy != null">AND created_by like concat(#{employeeAttendance.createdBy}, '%') </if>
		<if test="employeeAttendance.updatedBy != null">AND updated_by like concat(#{employeeAttendance.updatedBy}, '%') </if>
	</trim>
</sql>
   
<!-- 插入 员工考勤关系 -->
<insert id="addEmployeeAttendance" parameterType="com.jing.attendance.model.entity.EmployeeAttendance" >
	<selectKey keyProperty="linkId" order="AFTER" resultType="java.lang.Integer">
		SELECT LAST_INSERT_ID()
	</selectKey>
 	INSERT INTO tw_employee_attendance 
	<trim prefix=" (" suffix=")" suffixOverrides=",">
		<if test="linkId != null"> link_id,</if>
		<if test="empId != null"> emp_id,</if>
		<if test="attendanceId != null"> attendance_id,</if>
		<if test="createdBy != null"> created_by,</if>
		created_date,
		<if test="updatedBy != null"> updated_by,</if>
		updated_date,
	</trim>	 	
	<trim prefix="values (" suffix=")" suffixOverrides=",">
		<if test="linkId != null"> #{linkId},</if>
		<if test="empId != null"> #{empId},</if>
		<if test="attendanceId != null"> #{attendanceId},</if>
		<if test="createdBy != null"> #{createdBy},</if>
		now(),
		<if test="updatedBy != null"> #{updatedBy},</if>
		now(),
	</trim>
</insert>

<!-- 根据标识，修改 员工考勤关系 -->  
<update id="modifyEmployeeAttendance" parameterType="com.jing.attendance.model.entity.EmployeeAttendance" >
  	UPDATE tw_employee_attendance SET
	<trim suffixOverrides=",">
		<if test="empId != null"> emp_id = #{empId},</if>
		<if test="attendanceId != null"> attendance_id = #{attendanceId},</if>
		<if test="createdBy != null"> created_by = #{createdBy},</if>
		<if test="updatedBy != null"> updated_by = #{updatedBy},</if>
		updated_date = now(),
	</trim>
	WHERE link_id = #{linkId}
</update>
 
<!-- 删除 员工考勤关系 -->
<delete id="dropEmployeeAttendanceByLinkId" parameterType="java.lang.Integer">
	DELETE FROM tw_employee_attendance WHERE link_id = #{linkId}
</delete> 

<!-- 根据标识查询 员工考勤关系 -->
<select id="queryEmployeeAttendanceByLinkId"  resultMap="EmployeeAttendanceResultMap" parameterType="java.lang.Integer">
	SELECT 
	<include refid="sql_employeeAttendance_item"/>
	FROM tw_employee_attendance WHERE link_id = #{linkId}
</select>

<!-- 根据标识查询 员工考勤关系 -->
<select id="queryEmployeeAttendanceByEmpId"  resultMap="EmployeeAttendanceResultMap" parameterType="java.lang.Integer">
	SELECT 
	<include refid="sql_employeeAttendance_item"/>
	FROM tw_employee_attendance WHERE emp_id = #{empId}
</select>

<!-- 根据属性查询员工考勤关系 -->
<select id="queryEmployeeAttendanceByProperty"  resultMap="EmployeeAttendanceResultMap" parameterType="java.util.Map">
	SELECT 
	<include refid="sql_employeeAttendance_item"/>
	FROM tw_employee_attendance 
	<where>
		<include refid="sql_employeeAttendance_query_nowhere"/>
	</where>
</select>

<!-- 根据员工考勤关系属性与分页信息分页查询员工考勤关系信息 -->
<select id="queryEmployeeAttendanceForPage"  resultMap="EmployeeAttendanceResultMap" > 
	SELECT 
	<include refid="sql_employeeAttendance_item"/>
	FROM tw_employee_attendance 
	<where>
		<include refid="sql_employeeAttendance_query_nowhere"/>
	</where>
</select>

<!-- 根据员工考勤关系、员工、考勤规则属性与分页信息分页查询员工考勤信息 -->
<select id="queryEmployeeAttendanceAllForPage"  resultMap="EmployeeAttendanceLinkResult" > 
	select * from (
		select l.link_id, l.attendance_id, a.attendance_name, e.* from 
		(select * from tw_employee_attendance 
			<where> 
				<if test="attendanceId != null"> attendance_id = #{attendanceId}</if>
			</where>) l
		left OUTER join tw_attendance a on l.attendance_id=a.attendance_id
		left outer join tb_employee e on l.emp_id=e.emp_id
	) t 
	<where>
		<if test="employee.empName != null">AND emp_name like concat('%', #{employee.empName}, '%') </if>
		<if test="employee.pinyin != null">AND pinyin like concat('%', #{employee.pinyin}, '%') </if>
		<if test="employee.empNo != null">AND emp_no like concat('%', #{employee.empNo}, '%') </if>
		<if test="employee.userId != null">AND user_id = #{employee.userId} </if>
		<if test="employee.storeId != null">AND store_id = #{employee.storeId} </if>
		<if test="employee.dptId != null">AND dpt_id = #{employee.dptId} </if>
		<if test="namePYJob != null">AND (emp_name like concat('%', #{namePYJob}, '%') 
													or pinyin like concat('%', #{namePYJob}, '%')
													or emp_no like concat('%', #{namePYJob}, '%')
													) </if>
	</where>
</select>

</mapper>   
