		<if test="updatedBy != null"> #{updatedBy},</if>
		now(),
	</trim>
</insert>

<!-- 根据标识，修改 打卡记录 -->  
<update id="modifyEmployeeAttend" parameterType="com.jing.attendance.model.entity.EmployeeAttend" >
  	UPDATE tw_employee_attend SET
	<trim suffixOverrides=",">
		<if test="employeeId != null"> employee_id = #{employeeId},</if>
		<if test="attTime != null"> att_time = #{attTime},</if>
		<if test="createdBy != null"> created_by = #{createdBy},</if>
		<if test="updatedBy != null"> updated_by = #{updatedBy},</if>
		updated_date = now(),
	</trim>
	WHERE att_id = #{attId}
</update>
 
<!-- 删除 打卡记录 -->
<delete id="dropEmployeeAttendByAttId" parameterType="java.lang.Integer">
	DELETE FROM tw_employee_attend WHERE att_id = #{attId}
</delete> 

<!-- 根据标识查询 打卡记录 -->
<select id="queryEmployeeAttendByAttId"  resultMap="EmployeeAttendResultMap" parameterType="java.lang.Integer">
	SELECT 
	<include refid="sql_employeeAttend_item"/>
	FROM tw_employee_attend WHERE att_id = #{attId}
</select>

<!-- 根据属性查询打卡记录 -->
<select id="queryEmployeeAttendByProperty"  resultMap="EmployeeAttendResultMap" parameterType="java.util.Map">
	SELECT 
	<include refid="sql_employeeAttend_item"/>
	FROM tw_employee_attend 
	<where>
